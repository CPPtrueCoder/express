<h1>Add Your Course</h1>

<form action="/add" method="post">

    <div class="input-field">
        <input  id="title" name="title" type="text" class="validate" required>
        <label for="title">Name of course</label>
        <span class="helper-text" data-error="Name of cource" data-success="Good name"></span>
    </div>

    <div class="input-field">
        <input  id="price" name="price" type="number" class="validate" required min="1">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Add number" data-success="Success"></span>
    </div>

    <div class="input-field">
        <input  id="img"  name="img" type="text" class="validate" required>
        <label for="img">URL of image</label>
        <span class="helper-text" data-error="wrong" data-success="right"></span>
    </div>
    <button class="btn btn-success">Add</button>
</form>